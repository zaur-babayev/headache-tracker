generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model HeadacheEntry {
  id          String    @id @default(cuid())
  date        DateTime
  severity    Int       // 1-5 scale
  notes       String?
  medications Medication[]
  triggers    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Medication {
  id             String          @id @default(cuid())
  name           String
  dosage         String?
  headacheEntry  HeadacheEntry   @relation(fields: [headacheEntryId], references: [id], onDelete: Cascade)
  headacheEntryId String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}
